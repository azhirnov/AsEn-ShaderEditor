#ifdef SH_VERT
	#include "Transform.glsl"
	#include "Cone.glsl"
	#include "Hash.glsl"
	#include "Quaternion.glsl"

	void Main ()
	{
		const float		height		= un_DrawTasks.tasks[ gl.InstanceIndex ].w * iScale;
		const float3	cone_pos	= un_DrawTasks.tasks[ gl.InstanceIndex ].xyz;
		const float3	dir			= un_DrawTasks.params[ gl.InstanceIndex ].xyz;
		const float		angle		= un_DrawTasks.params[ gl.InstanceIndex ].w;
		const Cone		cone		= Cone_Create( cone_pos - un_PerPass.camera.pos, dir, angle, height );
		const float		radius		= Cone_BaseRadius( cone );
		const bool		is_visible	= un_DrawTasks.isVisible[ gl.InstanceIndex ] != 0;

		Quat			rot			= QFrom2Normals( float3(0.0, 1.0, 0.0), // origin direction
													 dir );					// new direction

		const uint		idx			= gl.VertexIndex;
		const float3	vert_pos	= cone.origin + QMul( rot, (un_Geometry.positions[idx] * float3(radius, radius, height)).xzy );
		const float4	world_pos	= float4( vert_pos, 1.0 );
		float4			color		= float4(1.0, 0.2, 0.3, 1.0);

		if ( is_visible )
			color = float4(0.0, 1.0, 0.0, 1.0);	// green - visible

		if ( iRndColor == 1 and is_visible )
		{
			color.rgb = DHash33( cone_pos );
			if ( Dot( color.rgb, color.rgb ) < 0.1 )
				color.rgb = 1.0 - color.rgb;
		}

		gl.Position		= WorldPosToClipSpace( world_pos );
		Out.color		= color;
		Out.worldPos	= world_pos;
	}

#endif
